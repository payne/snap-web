<div class="component-container-title">
  My Snap
  <small><i class="fa fa-thumb-tack" aria-hidden="true"></i></small>
</div>

<div class="container">
  <div class="row my-snap-status-bar flex-items-xs-middle">
    <div class="status-item col-xs">
      <span class="">
        <i class="fa fa-credit-card" aria-hidden="true"></i>
      </span>
      <h5 class="">Balance</h5>
      <div class="amount">$2,534.00</div>
    </div>
    <div class="status-item col-xs">
      <span class="">
        <i class="fa fa-tasks" aria-hidden="true"></i>
      </span>
      <h5 class="">Goals</h5>
      <div class="amount">$100.00</div>
    </div>
    <div class="status-item col-xs">
      <span class="">
        <i class="fa fa-calendar" aria-hidden="true"></i>
      </span>
      <h5 class="">Scheduled</h5>
      <div class="amount">$1310.00</div>
    </div>
  </div>

  {{! Graphs }}
  <div class="row">
    {{! Balances }}
    <div class="card text-xs-center col-xs balance">
      <div class="card-header">
        Balances
      </div>
      <div class="card-block">
        <h4 class="card-title">Balance this month</h4>
        {{c3-chart transition=transition data=balanceData axis=balanceAxis size=size}}
      </div>
      <div class="card-footer">
        24 days ago
      </div>
    </div>

    {{! Goals}}
    <div class="card text-xs-center col-xs goals">
      <div class="card-header">
        Goals
      </div>
      <div class="card-block">
        <h4 class="card-title">Your goals so far!</h4>
        <div class="goal-item">
          <div class="text-xs-center goal-description" id="goal-1">Marriage ~ Balance $5700</div>
            <progress class="progress" value="75" max="100" aria-describedby="goal-1"></progress>
        </div>
        <div class="goal-item">
          <div class="text-xs-center goal-description" id="goal-2">New House ~ Balance $12500</div>
            <progress class="progress" value="10" max="100" aria-describedby="goial-2"></progress>
        </div>
        <div class="goal-item">
          <div class="text-xs-center goal-description" id="goal-2">Vacation (Paris) ~ Balance $0</div>
            <progress class="progress" value="0" max="100" aria-describedby="goial-2"></progress>
        </div>
      </div>
    </div>

    {{! Upcoming Payments}}
    <div class="card text-xs-center col-xs bill-pay">
      <div class="card-header">
        Upcoming Payments
      </div>
      <div class="card-block">
        <h4 class="card-title">Payments coming your way</h4>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <span class="payee">NFM</span>
            <a href="#">
              $200
              <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            </a>
          </li>
          <li class="list-group-item">
            <span class="payee">Amazon Prime</span>
            <a href="#">
              $100
              <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            </a>
          </li>
          <li class="list-group-item">
            <span class="payee">WoodHouse</span>
            <a href="#">
              $400
              <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>