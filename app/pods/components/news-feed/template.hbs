<div class="news-feed-group">
  <div class="news-feed-group-title">Today</div>
  <ul class="list-unstyled news-feed-list">
    {{#each model as |feedItem|}}
      <li>
        <span class="icon">
          {{#if (eq feedItem.groupName 'Alert')}}
            <i class="fa fa-exclamation" aria-hidden="true"></i>
          {{else if (eq feedItem.groupName 'Notification')}}
            <i class="fa fa-flag-o" aria-hidden="true"></i>
          {{else}}
            <i class="fa fa-comment-o" aria-hidden="true"></i>
          {{/if}}
        </span>
        <span class="category">{{feedItem.groupName}}</span>
        <span class="title">{{feedItem.title}}</span>
        <span class="feed-item-actions">
          <span {{action 'removeItem' feedItem}}>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </span>
          <span {{action 'markItemAsRead' feedItem}}>
            <i class="fa fa-check" aria-hidden="true"></i>
          </span>
        </span>
      </li>
    {{else}}
      <p>You're all caught up</p>
    {{/each}}
  </ul>
</div>
