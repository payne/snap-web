{{#if isLoading}}
  <div class="loading">
    <i class="fa fa-spinner fa-spin fa-2x fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
{{else}}
  {{#if hasResults}}
    {{#each-in results as |key value|}}
      {{#if value.length}}
        <div class="result-group">
          <h6 class="result-group-heading dropdown-header">
            {{#if (eq key 'canI')}}
              Can I...
            {{else}}
              Show me...
            {{/if}}
          </h6>
          {{#each value as |resultItem|}}
            <a class="dropdown-item" href="#"  {{action 'chooseItem' resultItem}}>
              {{resultItem.desc}}
              {{#if (eq key 'canI')}}
                <span 
                  class="assist-text
                    {{if (eq resultItem.level 1) 'alert-success'}}
                    {{if (eq resultItem.level 2) 'alert-warning'}}
                    {{if (eq resultItem.level 3) 'alert-danger'}}
                "> {{resultItem.levelDesc}}</span>
              {{/if}}
            </a>
          {{/each}}
        </div>
      {{/if}}
    {{/each-in}}
  {{else}}
    <a class="dropdown-item disabled" href="#">
      Couldn't find that. Can try something different?
    </a>
  {{/if}}
{{/if}}
